@model List<PROJETO01.Modelos.Estado>

<h3>
    CADASTRO DE ESTADOS 
    <a class="btn btn-sm btn-primary float-right" href="/Estado/Adicionar">
        + ADICIONAR
    </a>
</h3>

<table class="table table-hover ">
    <thead>
        <tr>
            <th>UF</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UF</td>
                <td>@item.Nome</td>
                <td>
                    <a href="/Estado/Editar?uf=@item.UF" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <a href="/Estado/Excluir?uf=@item.UF" class="btn btn-sm btn-danger">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
